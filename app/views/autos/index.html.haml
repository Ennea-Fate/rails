=breadcrumb_tag do
  %li.active
    Автомобили
  %li
    Администрирование

%h1= t('app.autos.index')

%table.table.table-hover.table-striped.center
  %caption
    .pull-right
      = link_to t('app.drivers.new-button'), new_driver_path, class: 'btn btn-primary'
  %thead
    %tr
      %th= Auto.human_attribute_name(:model)
      %th= Auto.human_attribute_name(:class)
      %th= Auto.human_attribute_name(:number)
      %th= Auto.human_attribute_name(:color)
      %th= Auto.human_attribute_name(:year)
      %th.p50
      %th.p50
      %th.p50

  %tbody
    - @autos.each do |auto|
      %tr
        %td= auto.model
        %td= auto.myclass
        %td= auto.number
        %td= auto.color
        %td= auto.year
        %td
          = link_to auto, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_auto_path(auto), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to auto, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times

%br

= link_to t('app.autos.new-button'), new_auto_path
