.panel.panel-success#rate_select
  .panel-heading
    = t('app.rates.slct-button')
  .panel-body
    .form-group.row
      - if (f.object.rate != nil)
        - rate_id = f.object.rate.id
      - else
        - rate_id = 0
      .col-md-6
        = f.label :rate
      .col-md-6
        = select(:order, :rate_id, Rate.all.where("id != ?", rate_id).collect {|p| [p.name, p.id ]}, { include_blank: true }, class: 'form-control')
    = f.error_messages_for(:rate_id)