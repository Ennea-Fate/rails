%h1= t('app.orders.index')

%table
  %thead
    %tr
      %th= Order.human_attribute_name(:date) + ':' 
      %th= Order.human_attribute_name(:time) + ':' 
      %th= Order.human_attribute_name(:from_adress) + ':' 
      %th= Order.human_attribute_name(:to_adress) + ':' 
      %th= Order.human_attribute_name(:passangers_count) + ':' 
      %th= Order.human_attribute_name(:lenght_of_the_route) + ':' 
      %th= Order.human_attribute_name(:driver) + ':' 
      %th= Order.human_attribute_name(:rate) + ':' 
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.date
        %td= order.time.strftime("%H:%M")
        %td= order.from_adress
        %td= order.to_adress
        %td= order.passangers_count
        %td= order.lenght_of_the_route
        %td= (order.driver.fn + ' ' + order.driver.sn + ' ' + order.driver.ln)
        %td= order.rate.name
        %td
          = link_to order, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_order_path(order), class: 'btn btn-info' do
            = fa_icon :edit
        %td 
          = link_to order, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times

%br

= link_to t('app.orders.new-button'), new_order_path
