= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg
          
  .row
    .col-md-6
      .form-group
        .row
          .col-md-3
            = f.label :date
          .col-md-3
            = f.text_field :date, id: 'datetimepicker'
      = f.error_messages_for(:date, class: "bg-danger")
      .form-group
        .row
          .col-md-3
            = f.label :time
          .col-md-3
            = f.text_field :time
      = f.error_messages_for(:time, class: "bg-danger")
      .form-group
        .row
          .col-md-3
            = f.label :from_adress
          .col-md-3
            = f.text_field :from_adress
      = f.error_messages_for(:from_adress, class: "bg-danger")
      .form-group
        .row
          .col-md-3
            = f.label :to_adress
          .col-md-3
            = f.text_field :to_adress
      = f.error_messages_for(:to_adress, class: "bg-danger")
    .col-md-6
      .form-group
        .row
          .col-md-4
            = f.label :passangers_count
          .col-md-2
            = f.text_field :passangers_count
      = f.error_messages_for(:passangers_count, class: "bg-danger")
      .form-group
        .row
          .col-md-4
            = f.label :lenght_of_the_route
          .col-md-2
            = f.text_field :lenght_of_the_route
      = f.error_messages_for(:lenght_of_the_route, class: "bg-danger")
      .form-group
        .row
          .col-md-4
            = f.label :driver
          .col-md-2
            = select(:order, :driver_id, Driver.all.collect {|p| [ (p.fn + ' ' + p.sn + ' ' + p.ln), p.id ] }, { include_blank: true }, class: 'selectpicker', :data => {'style' => "btn-primary"})
      = f.error_messages_for(:driver, class: "bg-danger" )
  .row
    .col-md-12
      .btn-group.btn-group-justified
        =link_to_add_rate(f, f.object)
        =link_to_select_rate(f, f.object)
        - if(!@order.new_record?)
          =link_to_delete_rate(f, f.object)
      .row
        .col-auto#select-rate-place
        .col-auto#add-rate-place
        .col-auto#del-rate-place
  .form-actions
    = f.submit nil, class: 'btn btn-primary disabled', id: 'order_submit', disable: true
