%h1= t('app.rates.index')

%table
  %thead
    %tr
      %th= Rate.human_attribute_name(:name) + ':'
      %th= Rate.human_attribute_name(:times_of_day) + ':'
      %th= Rate.human_attribute_name(:how_far) + ':'
      %th= Rate.human_attribute_name(:PPK) + ':'
      %th
      %th
      %th

  %tbody
    - @rates.each do |rate|
      %tr
        %td= rate.name
        %td= rate.times_of_day
        %td= rate.how_far
        %td= rate.PPK
        %td
          = link_to rate, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_rate_path(rate), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to rate, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
%br

= link_to t('app.rates.new-button'), new_rate_path
